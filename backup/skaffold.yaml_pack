apiVersion: skaffold/v2beta10
kind: Config

build:
  local:
    push: true  # <--- 여기 추가 (로컬에서 빌드하고 Artifact Registry에 push)
  artifacts:
    - image: asia-docker.pkg.dev/architect-certification-289902/backend
      context: backend
      buildpacks:
        builder: paketobuildpacks/builder-jammy-base
    - image: asia-docker.pkg.dev/architect-certification-289902/admin-frontend
      context: admin-frontend
      buildpacks:
        builder: paketobuildpacks/builder-jammy-base
    - image: asia-docker.pkg.dev/architect-certification-289902/user-frontend
      context: user-frontend
      buildpacks:
        builder: paketobuildpacks/builder-jammy-base
deploy:
  kubectl:
    manifests:
      - k8s/*.yaml

